P1 = 100: I1 = 100: H1 = 100: ' INDEKSIT ALKAVAT 100:STA
READ LKM: ' SIMULOITAVIEN KIERROSTEN MAARA
P2 = 100: ' MUUTTUJIEN ALKUARVOT
I2 = 103
H2 = 108
CLS: ' TYHJENNA KUVARUUTU
PRINT "KUUKAUSI", "PALKAT", "HINNAT", "INDEKSI"
T = 1: ' 1. KIERROS
PRINT T, INT(P1), INT(H1), INT(I1)
T = 2: CONT = 1
WHILE CONT
    PRINT T, INT(P2), INT(H2), INT(I2): ' SILMUKAN ALKUKOHTA
    IF I2 / I1 > 1.02 THEN GOTO IND2: ' INDEKSI NOUSSUT YLI 2%?
    P3 = P2: ' MUUTOIN EI KOROTETA PALKKOJA
    GOTO IND
    ' PALKAT NOUSEVAT INDEKSIEN SUHTEESSA, RIVI 130
    ' - TAHAN VOISI MYOS OHJELMOIDA PALKKASULUN
    ' - TAHAN VOISI MYOSKIN LAITTAA PALKKOJEN NOUSUN INDEKSI-
    ' SIDONNAISUUDEN VAPAUTUKSEN
    IND2: P3 = P2 * (I2 / I1)
    ' TALOUSELAMA SIIRTAA PALKKOJEN NOUSUN SUORAAN HINTOIHIN, RIVI 140
    ' TASSA VOITAISIIN SIMULOIDA TUOTTAVUUDEN NOUSUA (UUSI
    ' TEKNOLOGIA, RATIONALISOINTI)
    ' SITEN, ETTA PALKAT NOUSEVAT MUTTA HINNAT
    ' NOUSEVAT VAHEMMAN
    ' TAHAN VOISI MYOS OHJELMOIDA HINTASULUN
    IND: H3 = H2 + (P2 - P1)
    I3 = I2 * (H2 / H1): ' INDEKSIN NOUSU LASKETAAN HINNOISTA
    P1 = P2: ' PAIVITETAAN MUUTTUJAT SEURAAVALLE
    P2 = P3: ' ITERAATIOKIERROKSELLE
    H1 = H2
    H2 = H3
    I1 = I2
    I2 = I3
    T = T + 1
    CONT = (T <= LKM) ' KIERROSMAARA TAYSI?
WEND
DATA 12
END

